---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio de √Ångel</title>
  </head>
  <body class="flex flex-col min-h-screen text-white">

    <div class="fixed inset-0 -z-10 w-full min-h-screen [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>

    <!-- Header -->
    <div class="w-full max-w-[1120px] mx-auto px-4">
      <Header />
    </div>

    <!-- Contenido principal -->
    <main class="flex-grow w-full max-w-[1120px] mx-auto px-4">
      <slot />
    </main>

    <!-- Footer -->
    <div class="w-full max-w-[1120px] mx-auto px-4">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
  }

  body {
    background: #050505;
    scroll-behavior: smooth;
  }
</style>

